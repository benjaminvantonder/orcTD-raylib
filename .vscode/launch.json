{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Game (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/game.exe",
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            // "MIDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
            "preLaunchTask": "build game",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}