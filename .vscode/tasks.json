{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build game",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-Iincludes",
                "main.cpp",
                "movement.cpp",
                "orcTextures.cpp",
                "towerTextures.cpp",
                "menuTextures.cpp",
                "-Llibs",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "game.exe"
